<header class="bkgd-col">
    <h1 id="main-title">Initiative Order</h1>

    <div id="header-btns">
        <a href="/settings"><span class="material-symbols-sharp border bkgd-col span-btn-big">settings</span></a>

        <span id="msgBtn" class="material-symbols-sharp border bkgd-col span-btn-big">sticky_note_2</span>
    </div>
</header>


<div id="initTable">
    <div id="initTableHeader" class="border bkgd-col">
        <h1 class="title">Initiative Order</h1>

        <span id="addCharBtn" class="material-symbols-sharp bkgd-col span-btn border">person_add</span>

        <input type="submit" id="next" value="Next">
        <input type="submit" id="reset" value="Reset Table">
        <input type="submit" id="edit" value="Edit">
    </div>

    <div id="charInit"></div>
</div>

<div id="addChar" class="border bkgd-col popup">
    <h2 class="title">Add NPC</h2>

    <span id="addCharBtn"class="material-symbols-sharp bkgd-col span-btn border">close</span>

    <div id="charInp">
        <label for="charName">NPC Name:</label>
        <input type="text" id="charName" name="charName"></p>

        <label for="totalNpc">NPC Count:</label>
        <input type="number" id="totalNpc" name="totalNpc" value="1"></p>

        <label for="initVal">Initiative Roll (optional):</label>
        <input type="number" id="initVal"  name="initVal"></p>

        <label for="dexMod">DEX Modifier:</label>
        <input type="number" id="dexMod" name="dexMod"></p>

    </div>
        <label for="isPlayer">Player Visible:</label>
        <input type="checkbox" id="isPlayer" name="isPlayer"></p>

    <input type="Submit" id="submit" value="Submit">
</div>

<div id="messageLog" class="border bkgd-col popup">
    <h1 class="title">Messages</h1>

    <span id="msgBtn"class="material-symbols-sharp bkgd-col span-btn border">close</span>

    <input type="text" id="newMessage">
    <input type="Submit" id="sendMessage" value="Send">

    <h3>Message Log</h3>

    <input type="Submit" id="clearMessages" value="Clear Messages">
    <ul id="messages">
    </ul>
</div>