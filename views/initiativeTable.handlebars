<script src="initiative_table.js" defer></script>

<h1>Initiative Order</h1>

{{# each initiativeOrder }}
    <p>{{ name }}: {{ total }} ({{ value }} + {{ mod }})</p>
{{/ each }}

<input type="Submit" id="reset" value="Reset Table">

<h3>Add NPC</h3>

<label for="npcName">NPC Name:</label>
<input type="text" id="npcName" name="charName"></p>

<label for="totalNpc">NPC Count:</label>
<input type="number" id="totalNpc" name="initVal" value="1"></p>

<label for="dexMod">DEX Modifier:</label>
<input type="number" id="dexMod" name="dexMod"></p>

<input type="Submit" id="submit" value="Submit">